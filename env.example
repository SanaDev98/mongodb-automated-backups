#!/bin/bash

# Environment file for MongoDB backup
# Rename this file to .env and modify the connection strings with your values

# Option 1: Configure multiple MongoDB instances separately
# Format: MONGODB_URI_[INSTANCE_NAME]
# Each instance will be backed up completely (all databases in that instance)

# Production MongoDB instance
MONGODB_URI_PRODUCTION=mongodb://username:password@production-mongodb:27017/

# Staging MongoDB instance
MONGODB_URI_STAGING=mongodb://username:password@staging-mongodb:27017/

# Development MongoDB instance
MONGODB_URI_DEVELOPMENT=mongodb://username:password@dev-mongodb:27017/

# Option 2: Configure using JSON (alternative to separate env vars)
# Note: If both methods are used, separate env vars take precedence for duplicate names
MONGODB_CONNECTIONS='{"analytics": "mongodb://username:password@analytics-mongodb:27017/", "reporting": "mongodb://username:password@reporting-mongodb:27017/"}'

# Backward compatibility: For single MongoDB instance setup
# If no other connections are defined, this will be used
MONGODB_URI=mongodb://username:password@mongodb:27017/

# Set to "true" to run an initial backup when the container starts
INITIAL_BACKUP=false

# Number of days to keep backups (default: 14)
DAYS_TO_KEEP=14